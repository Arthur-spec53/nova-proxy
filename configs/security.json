{
  "key_manager": {
    "key_store_path": "./data/keys",
    "master_password": "${NOVA_MASTER_PASSWORD}",
    "rotation_interval": "24h",
    "key_expiry": "720h",
    "backup_enabled": true,
    "backup_path": "./data/keys/backup",
    "encryption_algo": "AES256",
    "kdf_iterations": 100000
  },
  "cert_manager": {
    "cert_store_path": "./data/certs",
    "ca_key_path": "./data/certs/ca.key",
    "ca_cert_path": "./data/certs/ca.crt",
    "default_key_size": 2048,
    "default_valid_days": 365,
    "renewal_threshold": "720h",
    "auto_renewal": true,
    "backup_enabled": true,
    "backup_path": "./data/certs/backup",
    "ocsp_enabled": false,
    "crl_enabled": false
  },
  "access_control": {
    "data_path": "./data/access_control",
    "session_timeout": "30m",
    "max_failed_attempts": 5,
    "lockout_duration": "15m",
    "password_min_length": 8,
    "password_complexity": true,
    "rate_limit_enabled": true,
    "default_rate_limit": 100,
    "rate_limit_window": "1m"
  },
  "audit_logger": {
    "log_path": "./logs/audit.log",
    "max_file_size": 104857600,
    "max_files": 10,
    "max_age": 30,
    "compress": true,
    "async_logging": true,
    "buffer_size": 1000,
    "flush_interval": "5s",
    "min_level": "info",
    "encrypt_logs": true,
    "encryption_key": "${NOVA_AUDIT_ENCRYPTION_KEY}"
  },
  "tls": {
    "min_version": "1.2",
    "max_version": "1.3",
    "cipher_suites": [
      "TLS_AES_256_GCM_SHA384",
      "TLS_CHACHA20_POLY1305_SHA256",
      "TLS_AES_128_GCM_SHA256",
      "TLS_ECDHE_RSA_WITH_AES_256_GCM_SHA384",
      "TLS_ECDHE_RSA_WITH_CHACHA20_POLY1305",
      "TLS_ECDHE_RSA_WITH_AES_128_GCM_SHA256"
    ],
    "prefer_server_cipher_suites": true,
    "session_tickets_disabled": false,
    "renegotiation_support": "never"
  },
  "encryption": {
    "default_algorithm": "AES256-GCM",
    "key_derivation": "PBKDF2",
    "kdf_iterations": 100000,
    "salt_length": 32,
    "iv_length": 12
  },
  "network_security": {
    "allowed_ips": [],
    "blocked_ips": [],
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 1000,
      "burst_size": 100
    },
    "ddos_protection": {
      "enabled": true,
      "threshold": 10000,
      "ban_duration": "1h"
    }
  },
  "security_policies": {
    "password_policy": {
      "min_length": 8,
      "require_uppercase": true,
      "require_lowercase": true,
      "require_numbers": true,
      "require_symbols": true,
      "max_age": "90d",
      "history_count": 5
    },
    "session_policy": {
      "max_concurrent_sessions": 5,
      "idle_timeout": "30m",
      "absolute_timeout": "8h",
      "secure_cookies": true,
      "same_site": "strict"
    }
  },
  "monitoring": {
    "security_events": true,
    "failed_logins": true,
    "suspicious_activities": true,
    "certificate_expiry": true,
    "key_rotation": true,
    "alert_thresholds": {
      "failed_login_attempts": 10,
      "certificate_expiry_days": 30,
      "key_age_days": 30
    }
  }
}